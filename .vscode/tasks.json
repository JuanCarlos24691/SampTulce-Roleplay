{
  "version": "2.0.0",
  "tasks":
  [
    {
      "label": "build",
      "type": "shell",
      "command": "${workspaceRoot}/pawn/pawncc",
      "args": ["'${file}'", "'-D${fileDirname}'", "-i${workspaceRoot}/pawn/include", "-i${workspaceRoot}/gamemodes/sources", "'-;+'", "'-(+'", "'-Z+'", "'-d3'"],
 
      "group":
      {
        "kind": "build",
        "isDefault": true
      },
 
      "isBackground": false,
 
      "presentation":
      {
        "reveal": "always",
        "panel": "dedicated"
      },
 
      "problemMatcher": "$pawncc"
    }
  ]
}